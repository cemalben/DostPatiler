@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@model DostPatiler.Models.Hayvan

@{
    ViewData["Title"] = @localizer["Title"];
}

<section class="about">
    <h1>@ViewData["Title"]</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HayvanTur)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HayvanTur)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HayvanCins)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HayvanCins)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HayvanCinsiyet)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HayvanCinsiyet)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HayvanYas)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HayvanYas)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.HayvanImage)
            </dt>
            <dd class="col-sm-10">
                <img src="@Url.Content(Model.HayvanImage)" class="d-block w-50" asp-append-version="true" alt="">
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.HayvanId">@localizer["Edit"]</a> |
        <a asp-action="Index">@localizer["Back"]</a>
    </div>
</section>