@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = @IdentityLocalizer.GetLocalizedHtmlString("RESET_YOUR_PASSWORD");
}

@inject DostPatiler.Resources.IdentityLocalizationService IdentityLocalizer

<section class="about">
    <h1>@ViewData["Title"]</h1>
    <h4>@IdentityLocalizer.GetLocalizedHtmlString("ENTER_YOUR_EMAIL")</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">@IdentityLocalizer.GetLocalizedHtmlString("SUBMIT")</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</section>